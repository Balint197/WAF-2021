<% layout('layouts/boilerplate') %>

<% if(failureFlash.length!=0) { %>
    <%= console.log(failureFlash.length==0) %>
    <div class="alert alert-danger alert-dismissible d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                <div>
                    <%= failureFlash %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
    </div>
<% } %>

    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1562568068-ea24dcbf3c78?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1174&q=80" alt="" class="card-img-top" />
                    <div class="card-body">
                        <h3 class="card-title mb-2">Belépés</h3>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">

                                <div class="form-floating mb-3">
                                    <input type="username" name="username" id="username" class="form-control" placeholder="username">
                                    <label for="username">Felhasználónév</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="password" name="password" id="password" class="form-control" placeholder="password">
                                    <label for="password">Jelszó</label>
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-success" type="submit">Bejelentkezés</button>
                                </div>
                            </div>
                        </form>
                        <p >Még nem regisztráltál? <a href="/register">Regisztráció</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>